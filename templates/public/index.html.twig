        <li class="nav-item">
            <a class="nav-link js-scroll-trigger" href="{{  path("detail_styles",{"id":itemMenu.getIdstyles}) }}">{{ itemMenu.getLestyles }}</a>
        </li>

    {% endfor %}
    </ul>
